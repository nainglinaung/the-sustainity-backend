{
    "compilerOptions": {
      "target": "es6",
      "types": ["jest", "node"],
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "declaration": true
    },
    "include": ["src/**/*", "__test__/setup.ts"],
    "exclude": ["node_modules", "dist", "src/tests"]
}
